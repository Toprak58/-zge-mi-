package org.example;

import com.itextpdf.text.Document;
import com.itextpdf.text.DocumentException;
import com.itextpdf.text.Paragraph;
import com.itextpdf.text.Image;
import com.itextpdf.text.pdf.PdfWriter;

import java.io.FileOutputStream;
import java.io.IOException;

public class Ozgecmis {

    public static void main(String[] args) {
        Document document = new Document();

        try {
            PdfWriter.getInstance(document, new FileOutputStream("Ozgecmis.pdf"));
            document.open();

            Image img = Image.getInstance("src/main/resources/foto.jpg");
            img.scaleToFit(150, 150);
            document.add(img);

            document.add(new Paragraph("Ozgecmis\n\n"));
            document.add(new Paragraph("Ad Soyad:  Abdullah Kaya "));
            document.add(new Paragraph("E-posta: abdullahkaya@example.com"));
            document.add(new Paragraph("Telefon: 0555 555 55 55\n\n"));

            document.add(new Paragraph("Is Deneyimleri:"));
            document.add(new Paragraph("1) Yazilim Muhendisi - ABC Sirketi (2020 - 2022)"));
            document.add(new Paragraph("   Java ile kurumsal uygulama gelistirme.\n"));

            document.add(new Paragraph("2) Backend Developer - XYZ Teknoloji (2018 - 2020)"));
            document.add(new Paragraph("   Veri tabani tasarimi ve API gelistirme.\n"));

            document.add(new Paragraph("3) Stajyer Yazilim Gelistirici - Ornek Ltd. (2017 - 2018)"));
            document.add(new Paragraph("   Takim projelerinde gorev alma, hata ayiklama.\n"));

            document.close();
            System.out.println("CV basariyla olusturuldu: Ozgecmis.pdf");

        } catch (DocumentException | IOException e) {
            e.printStackTrace();
        }
    }
}
